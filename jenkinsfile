pipeline {
    agent {
        docker { image 'python' }
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '**']], extensions: [], userRemoteConfigs: [[credentialsId: 'a7cb801b-6be1-4588-b6c4-52e72b62cf79', url: 'https://github.com/anastasiyakudzina/module_6.git']]])
            }
        }
        stage('Build'){
            steps {

                sh 'python main.py'
            }
        }
        stage('Test'){
            steps {

                sh 'python test/main_test.py'
            }
        }
    }
}